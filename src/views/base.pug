doctype html
html(lang="ko")
    head
        title #{pageTitle} | NuTube
        link(rel="stylesheet" href="https://unpkg.com/mvp.css")
    body
        header
            h1=pageTitle
            nav
                ul
                    if fakeUser.loggedIn
                        li
                            a(href="/videos/upload") Upload Video
                        li 
                            a(href="/logout") Log out
                    else
                        li
                            a(href="/videos/upload") Upload Video
                        li 
                            a(href="/login") Login
        main
            block content
    include partials/footer